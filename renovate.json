{
  "$schema": "https://json.schemastore.org/renovate",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":disableDependencyDashboard",
    ":maintainLockFilesWeekly",
    ":rebaseStalePrs"
  ],
  "ignoreDeps": ["typescript"],
  "ignorePresets": [":dependencyDashboard"],
  "packageRules": [
    {
      "groupName": "Angular",
      "matchPackagePatterns": [
        "^@angular-devkit/",
        "^@angular-eslint/",
        "^@angular/",
        "^@materia-ui/",
        "^angular-",
        "^angular-cli-",
        "^ng-",
        "^ngx-",
        "firebase",
        "rxfire",
        "rxjs",
        "zone.js"
      ]
    }
  ]
}
